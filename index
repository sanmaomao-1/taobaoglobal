    <script>
        // 模拟数据
        let blacklistData = [
            { recordId: 'rec_0', id: 'SUP_9999', wangwang: 'bad_seller_007', companyName: '诚信缺失贸易行', types: ['下单', '找货', '查单', '通知'], interceptCount: 0, reason: '涉嫌售假，平台已通报', time: '2025-01-20 16:00:00', operator: '风控系统', status: 'active' },
            { recordId: 'rec_1', id: 'SUP_1001', wangwang: 'tb_shop_1001', companyName: '义乌市小商品精选店', types: ['找货', '查单'], interceptCount: 42, reason: '多次发错货，且拒绝承担运费', time: '2025-09-01 10:22:11', operator: '张三', status: 'active' },
            { recordId: 'rec_2', id: 'SUP_2001', wangwang: 'hz_silk_direct', companyName: '杭州丝绸直供', types: ['查单'], interceptCount: 5, reason: '配合度低，多次拒绝提供物流信息', time: '2024-12-11 09:30:00', operator: '李四', status: 'inactive', releaseTime: '2025-01-01 09:00:00' },
            { recordId: 'rec_3', id: 'SUP_2002', wangwang: 'sh_stationary_fac', companyName: '上海文具用品制造厂', types: ['找货'], interceptCount: 1, reason: '临时缺货，且未提前通知，影响订单交付', time: '2024-11-20 14:00:00', operator: '王五', status: 'inactive', releaseTime: '2024-11-25 10:00:00' }
        ];
        const supplierDb = [
            { id: 'SUP_1001', wangwang: 'tb_shop_1001', companyName: '义乌市小商品精选店' },
            { id: 'SUP_1002', wangwang: 'gz_clothing_wh', companyName: '广州服装批发总仓' },
            { id: 'SUP_1003', wangwang: 'sz_elec_factory', companyName: '深圳电子元件厂' },
            { id: 'SUP_2001', wangwang: 'hz_silk_direct', companyName: '杭州丝绸直供' },
            { id: 'SUP_2002', wangwang: 'sh_stationary_fac', companyName: '上海文具用品制造厂' },
            { id: 'SUP_9999', wangwang: 'bad_seller_007', companyName: '诚信缺失贸易行' }
        ];

        // 全局变量
        let selectedSupplier = null;
        let currentSortOrder = 'desc';
        const dom = {
            filterStatus: document.getElementById('filterStatus'),
            typeSelectTrigger: document.getElementById('typeSelectTrigger'),
            typeSelectOptions: document.getElementById('typeSelectOptions'),
            typeSelectLabel: document.getElementById('typeSelectLabel'),
            typeCheckboxes: document.querySelectorAll('.type-checkbox'),
            searchInput: document.getElementById('searchInput'),
            searchBtn: document.getElementById('searchBtn'),
            resetBtn: document.getElementById('resetBtn'),
            refreshIcon: document.getElementById('refreshIcon'),
            refreshTimeDisplay: document.getElementById('refreshTimeDisplay'),
            addBlacklistBtn: document.getElementById('addBlacklistBtn'),
            sortTimeTh: document.getElementById('sortTimeTh'),
            sortTimeIcon: document.getElementById('sortTimeIcon'),
            blacklistBody: document.getElementById('blacklistBody'),
            emptyState: document.getElementById('emptyState'),
            addModal: document.getElementById('addModal'),
            modalCloseBtn: document.getElementById('modalCloseBtn'),
            modalCancelBtn: document.getElementById('modalCancelBtn'),
            modalSaveBtn: document.getElementById('modalSaveBtn'),
            supplierSearch: document.getElementById('supplierSearch'),
            companyNameInput: document.getElementById('companyNameInput'),
            blockReason: document.getElementById('blockReason'),
            searchResults: document.getElementById('searchResults'),
            blockTypeCheckboxes: document.querySelectorAll('input[name="blockType"]')
        };

        // 初始化：绑定所有事件（彻底抛弃HTML内onclick）
        function init() {
            // 筛选/搜索事件
            dom.filterStatus.addEventListener('change', renderTable);
            dom.typeSelectTrigger.addEventListener('click', toggleTypeSelect);
            dom.typeCheckboxes.forEach(cb => cb.addEventListener('change', () => { updateTypeLabel(); renderTable(); }));
            dom.searchBtn.addEventListener('click', renderTable);
            dom.resetBtn.addEventListener('click', resetSearch);
            dom.refreshIcon.addEventListener('click', refreshList);
            dom.sortTimeTh.addEventListener('click', toggleSort);
            // 弹窗事件
            dom.addBlacklistBtn.addEventListener('click', addBlacklist);
            dom.modalCloseBtn.addEventListener('click', closeModal);
            dom.modalCancelBtn.addEventListener('click', closeModal);
            dom.modalSaveBtn.addEventListener('click', saveBlacklist);
            dom.supplierSearch.addEventListener('input', (e) => simulateSearch(e.target.value));
            // 页面空白处关闭下拉
            document.addEventListener('click', (e) => {
                if (!e.target.closest('#typeMultiSelect')) dom.typeSelectOptions.style.display = 'none';
                if (!e.target.closest('#supplierSearch') && !e.target.closest('#searchResults')) dom.searchResults.style.display = 'none';
            });
            // 初始化渲染
            updateRefreshTime();
            renderTable();
        }

        // 核心：解除拉黑函数（100%触发）
        function releaseBlacklist(recordId) {
            console.log('触发解除拉黑：', recordId); // 控制台日志，可验证触发
            const targetItem = blacklistData.find(item => item.recordId === recordId);
            if (!targetItem) {
                alert('⚠️ 未找到该供应商记录！');
                return;
            }
            if (confirm('⚠️ 确认解除该供应商的黑名单吗？\n解除后将恢复正常问询功能！')) {
                targetItem.status = 'inactive';
                targetItem.releaseTime = new Date().toLocaleString().replace(/\//g, '-');
                renderTable();
                const filterVal = dom.filterStatus.value;
                if (filterVal === 'active') {
                    setTimeout(() => {
                        alert('✅ 解除成功！\n该记录已移至「已恢复」列表，可切换筛选查看。');
                    }, 100);
                } else {
                    alert('✅ 解除成功！该供应商已恢复正常状态。');
                }
            }
        }

        // 重新拉黑函数
        function reBlockSupplier(recordId) {
            const item = blacklistData.find(i => i.recordId === recordId);
            if (!item) return;
            addBlacklist();
            dom.supplierSearch.value = item.wangwang;
            dom.companyNameInput.value = item.companyName || '';
            dom.blockReason.value = item.reason;
            dom.blockTypeCheckboxes.forEach(cb => {
                cb.checked = item.types.includes(cb.value);
            });
            selectedSupplier = { id: item.id, wangwang: item.wangwang, companyName: item.companyName };
        }

        // 渲染表格（操作按钮用自定义属性+事件委托）
        function renderTable() {
            const searchVal = dom.searchInput.value.trim().toLowerCase();
            const filterStatus = dom.filterStatus.value;
            const selectedTypes = Array.from(dom.typeCheckboxes).filter(cb => cb.checked).map(cb => cb.value);
            dom.blacklistBody.innerHTML = '';

            // 过滤数据
            let filtered = blacklistData.filter(item => {
                const matchText = item.id.toLowerCase().includes(searchVal) || item.wangwang.toLowerCase().includes(searchVal) || (item.companyName && item.companyName.toLowerCase().includes(searchVal));
                const matchStatus = filterStatus === 'all' || item.status === filterStatus;
                const matchType = selectedTypes.length === 0 ? false : item.types.some(t => selectedTypes.includes(t));
                return matchText && matchStatus && matchType;
            });

            // 排序
            filtered.sort((a, b) => {
                const getTime = (item) => new Date((item.status !== 'active' && item.releaseTime ? item.releaseTime : item.time).replace(/-/g, '/')).getTime();
                return currentSortOrder === 'asc' ? getTime(a) - getTime(b) : getTime(b) - getTime(a);
            });

            // 空状态
            if (filtered.length === 0) {
                dom.emptyState.style.display = 'block';
                return;
            }
            dom.emptyState.style.display = 'none';

            // 渲染行
            filtered.forEach(item => {
                let typesHtml = '';
                item.types.includes('找货') && (typesHtml += '<span class="type-tag type-sourcing">找货</span>');
                item.types.includes('查单') && (typesHtml += '<span class="type-tag type-check">查单</span>');
                item.types.includes('通知') && (typesHtml += '<span class="type-tag type-notify">通知</span>');
                item.types.includes('下单') && (typesHtml += '<span class="type-tag type-order">禁止下单</span>');
                const countHtml = item.interceptCount > 0 ? `<span class="intercept-count" data-name="${item.wangwang}">${item.interceptCount} 单</span>` : '<span style="color:#ccc">0</span>';
                const isActive = item.status === 'active';
                const statusHtml = isActive ? '<span class="tag-blacklist">已拉黑</span>' : '<span class="tag-whitelist">已恢复</span>';
                const timeHtml = isActive ? `<div style="color:#666;font-size:12px">拉黑: ${item.time.split(' ')[0]}</div>` : `<div style="color:#52c41a;font-size:12px;font-weight:500">恢复: ${item.releaseTime.split(' ')[0]}</div><div style="color:#999;font-size:12px">拉黑: ${item.time.split(' ')[0]}</div>`;
                // 操作按钮：自定义data属性存recordId，无直接传参
                const actionHtml = isActive 
                    ? `<span class="action-link delete operate-btn" data-type="release" data-id="${item.recordId}">解除拉黑</span>` 
                    : `<span class="action-link operate-btn" data-type="reblock" data-id="${item.recordId}">重新拉黑</span>`;

                const tr = document.createElement('tr');
                !isActive && (tr.style.background = '#fafafa');
                tr.innerHTML = `
                    <td>${item.id}</td>
                    <td><b>${item.wangwang}</b></td>
                    <td>${item.companyName || '-'}</td>
                    <td>${typesHtml || '-'}</td>
                    <td>${countHtml}</td>
                    <td><div class="reason-text" title="${item.reason}">${item.reason}</div></td>
                    <td>${timeHtml}</td>
                    <td>${item.operator}</td>
                    <td>${statusHtml}</td>
                    <td>${actionHtml}</td>
                `;
                dom.blacklistBody.appendChild(tr);
            });

            // 表格操作按钮：事件委托（核心！解决所有触发问题）
            dom.blacklistBody.addEventListener('click', (e) => {
                const target = e.target.closest('.operate-btn');
                const interceptTarget = e.target.closest('.intercept-count');
                if (target) {
                    const type = target.dataset.type;
                    const id = target.dataset.id;
                    type === 'release' ? releaseBlacklist(id) : reBlockSupplier(id);
                }
                if (interceptTarget) {
                    showInterceptDetails(interceptTarget.dataset.name);
                }
            });
        }

        // 其他工具函数（均为原生JS，无兼容问题）
        function toggleTypeSelect() {
            dom.typeSelectOptions.style.display = dom.typeSelectOptions.style.display === 'block' ? 'none' : 'block';
        }
        function updateTypeLabel() {
            const checked = Array.from(dom.typeCheckboxes).filter(cb => cb.checked);
            dom.typeSelectLabel.innerText = checked.length === 3 ? '类型: 全部' : checked.length === 0 ? '类型: 无' : `类型: 已选(${checked.length})`;
        }
        function updateRefreshTime() {
            const now = new Date();
            const timeStr = `${now.getFullYear()}-${String(now.getMonth()+1).padStart(2,0)}-${String(now.getDate()).padStart(2,0)} ${String(now.getHours()).padStart(2,0)}:${String(now.getMinutes()).padStart(2,0)}:${String(now.getSeconds()).padStart(2,0)}`;
            dom.refreshTimeDisplay.innerText = timeStr;
        }
        function refreshList() {
            updateRefreshTime();
            renderTable();
            alert('✅ 列表已刷新');
        }
        function toggleSort() {
            currentSortOrder = currentSortOrder === 'desc' ? 'asc' : 'desc';
            dom.sortTimeIcon.innerText = currentSortOrder === 'desc' ? '↓' : '↑';
            renderTable();
        }
        function resetSearch() {
            dom.searchInput.value = '';
            dom.filterStatus.value = 'all';
            dom.typeCheckboxes.forEach(cb => cb.checked = true);
            updateTypeLabel();
            renderTable();
        }
        function addBlacklist() {
            dom.addModal.style.display = 'flex';
            dom.supplierSearch.value = '';
            dom.companyNameInput.value = '';
            dom.blockReason.value = '';
            dom.searchResults.style.display = 'none';
            dom.blockTypeCheckboxes.forEach(cb => cb.checked = true);
            selectedSupplier = null;
        }
        function closeModal() {
            dom.addModal.style.display = 'none';
        }
        function simulateSearch(val) {
            if (!val) {
                dom.searchResults.style.display = 'none';
                return;
            }
            const results = supplierDb.filter(s => (s.wangwang.includes(val) || s.companyName.includes(val)) && !blacklistData.find(b => b.id === s.id && b.status === 'active'));
            dom.searchResults.innerHTML = results.length > 0 ? results.map(s => `<div class="search-result-item" data-id="${s.id}" data-wangwang="${s.wangwang}" data-company="${s.companyName}"><span style="font-weight:bold">${s.wangwang}</span> <span style="color:#666;font-size:12px">(${s.companyName})</span></div>`).join('') : '<div style="padding:8px;color:#999">未找到匹配供应商或已拉黑</div>';
            dom.searchResults.style.display = 'block';
            // 搜索结果点击
            dom.searchResults.addEventListener('click', (e) => {
                const item = e.target.closest('.search-result-item');
                if (item) {
                    selectedSupplier = {
                        id: item.dataset.id,
                        wangwang: item.dataset.wangwang,
                        companyName: item.dataset.company
                    };
                    dom.supplierSearch.value = selectedSupplier.wangwang;
                    dom.companyNameInput.value = selectedSupplier.companyName;
                    dom.searchResults.style.display = 'none';
                }
            });
        }
        function saveBlacklist() {
            const reason = dom.blockReason.value.trim();
            const searchInput = dom.supplierSearch.value.trim();
            const selectedTypes = Array.from(dom.blockTypeCheckboxes).filter(cb => cb.checked).map(cb => cb.value);
            if (!selectedSupplier && !searchInput) { alert('请填写/搜索旺旺号！'); return; }
            if (selectedTypes.length === 0) { alert('请选择拉黑类型！'); return; }
            if (!reason) { alert('请填写拉黑原因！'); return; }
            const newItem = {
                recordId: 'rec_' + Date.now(),
                id: selectedSupplier ? selectedSupplier.id : ('SUP_NEW_' + Math.floor(Math.random()*10000)),
                wangwang: selectedSupplier ? selectedSupplier.wangwang : searchInput,
                companyName: selectedSupplier ? selectedSupplier.companyName : dom.companyNameInput.value.trim() || '-',
                types: selectedTypes,
                interceptCount: 0,
                reason: reason,
                time: new Date().toLocaleString().replace(/\//g, '-'),
                operator: '当前用户',
                status: 'active'
            };
            blacklistData.unshift(newItem);
            renderTable();
            closeModal();
            alert(`✅ 拉黑成功！\n供应商：${newItem.wangwang}\n类型：${selectedTypes.join('、')}`);
        }
        function showInterceptDetails(name) {
            alert(`【拦截明细】\n供应商：${name}\n（功能开发中，暂未实现）`);
        }

        // 启动页面
        window.onload = init;
    </script>
</body>
</html>
